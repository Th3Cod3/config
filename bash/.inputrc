$include /etc/inputrc

set completion-ignore-case on

"\ee": alias-expand-line

# mappings for Ctrl-left-arrow and Ctrl-right-arrow for word moving
"\e[1;5C": forward-word
"\e[1;5D": backward-word
"\e[5C": forward-word
"\e[5D": backward-word

# Word deletion
"\C-H": backward-kill-word
"\C-?": backward-kill-word
"\e[3;5~": kill-word
